<NoiseMakerFunc>:
# id for the application 	
	id: noisemaker
	
# Graphical elements of the application
	canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: 0,50
            size: 1000,400

# 'Title' of the program   
	Label:
		text: "NoiseMaker"
		font_size: 36
		size_hint: .2, .1
		pos_hint: {"left": 1, "top":.995}

# 'Made by' of the program		
	Label:
		text: "Created by: Matthijs Kloosterboer and Jeroen Rademaker"
		pos_hint: {"right": 1, "bottom":.99}
		size_hint: .4, .1

# Target scan
# Input labels and fields
	GridLayout:
		size_hint: .49, .23
		pos_hint: {"left": .99, "top":.88}
		rows: 3
		spacing: 10
		
		BoxLayout:	
			Label:
				text: "Interface"
			TextInput:
				id: scaniface
				hint_text: "e.g. wlan0mon"
				write_tab: False
				multiline: False
		
		BoxLayout:	
			Label:
				text: "Range"
			TextInput:
				id: scanamount
				hint_text: "e.g. 500 for a neighborhood"
				write_tab: False
				multiline: False

# Search button
		BoxLayout:	
			Button:
				text: "Search Targets"
				font_size: 18
				on_press: noisemaker.ScanTarget()

# Output
	Label:
		text: "Targets"
		size_hint: .05, .1
		pos_hint: {"left": 0.95, "top":.67}
		
	BoxLayout:
		size_hint: .49, .47
		pos_hint: {"left": .99, "top":.59}
		
		TextInput:
			id: targetOutput
			write_tab: False
			readonly: True
			font_name: "Consola"
			font_size: 14		

# Deauthentication attack
# Input labels and fields	
	GridLayout:
		size_hint: .49, .4
		pos_hint: {"right": .99, "top":.88}
		rows: 5
		spacing: 10
		
		BoxLayout:	
			Label:
				text: "Interface"
			TextInput:
				id: iface
				hint_text: "e.g. wlan0mon"
				write_tab: False
				multiline: False
		
		BoxLayout:	
			Label:
				text: "BSSID"
			TextInput:
				id: ssid
				hint_text: "e.g. AB:CD:EF:12:34:56"
				write_tab: False
				multiline: False

		BoxLayout:	
			Label:
				text: "Client"
			TextInput:
				text: "FF:FF:FF:FF:FF:FF"
				hint_text: "e.g. FF:FF:FF:FF:FF:FF for all clients."
				id: target
				write_tab: False
				multiline: False
				
		BoxLayout:	
			Label:
				text: "Count"
			TextInput:
				id: decount
				hint_text: "e.g. 10 for 10 packets"
				write_tab: False
				multiline: False

# Send button				
		BoxLayout:	
			Button:
				text: "Deauthenticate"
				font_size: 18
				on_press: noisemaker.SendPacket()

# Output
	Label:
		text: "Output"
		size_hint: 0.05, .1
		pos_hint: {"right": .99, "top":.50}
	
	BoxLayout:
		size_hint: .49, .3
		pos_hint: {"right": .99, "top":.42}
		TextInput:
			write_tab: False
			id: resultOutput
			readonly: True
			font_name: "Consola"
			font_size: 14