<iLabel@Label>:
	font_size: 18
	
<inLabel@Label>:
	font_size: 18

<NoiseMakerFunc>:
	id: noisemaker
	canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: 0,50
            size: 1000,400

# 'Title' of the program   

	Label:
		text: "NoiseMaker"
		font_size: 36
		size_hint: .2, .1
		pos_hint: {"left": 1, "top":.995}

# 'Made by' of the program		

	Label:
		text: "Created by: Matthijs Kloosterboer and Jeroen Rademaker"
		pos_hint: {"right": 1, "bottom":.99}
		size_hint: .4, .1

# Left side of the program

# Target scan input labels and fields

	GridLayout:
		size_hint: .49, .23
		pos_hint: {"left": .99, "top":.88}
		rows: 3
		spacing: 10
		
		BoxLayout:	
			Label:
				text: "Interface"
			TextInput:
				id: scaniface
				multiline: False
		
		BoxLayout:	
			Label:
				text: "Range"
			TextInput:
				id: scanamount
				multiline: False

# Target scan send button

		BoxLayout:	
			Button:
				text: "Search Targets"
				font_size: 18
				on_press: noisemaker.ScanTarget()

# Output Target scan

	Label:
		text: "Targets"
		size_hint: .05, .1
		pos_hint: {"left": 0.95, "top":.67}
		
	BoxLayout:
		size_hint: .49, .47
		pos_hint: {"left": .99, "top":.59}
		
		TextInput:
			id: targetOutput
			readonly: True		

# Right side of the program

# Deauthentication input labels and fields	

	GridLayout:
		size_hint: .49, .4
		pos_hint: {"right": .99, "top":.88}
		rows: 5
		spacing: 10
		
		BoxLayout:	
			Label:
				text: "Interface"
			TextInput:
				id: iface
				multiline: False
		
		BoxLayout:	
			Label:
				text: "SSID"
			TextInput:
				id: ssid
				multiline: False

		BoxLayout:	
			Label:
				text: "Client"
			TextInput:
				text: "FF:FF:FF:FF:FF:FF"
				hint_text: "FF:FF:FF:FF:FF:FF is target2ing all clients."
				id: target
				multiline: False
				
		BoxLayout:	
			Label:
				text: "Count"
			TextInput:
				id: decount
				multiline: False

# Deauthentication send button				

		BoxLayout:	
			Button:
				text: "Deauthenticate"
				font_size: 18
				on_press: noisemaker.SendPacket()
# Output Deauthentication Attack
	
	Label:
		text: "Output"
		size_hint: 0.05, .1
		pos_hint: {"right": .99, "top":.50}
	
	BoxLayout:
		size_hint: .49, .3
		pos_hint: {"right": .99, "top":.42}
		
		TextInput:
			id: resultOutput
			readonly: True